
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
   
    var nguoiLon = ViewBag.nguoiLon;
    var treEm = ViewBag.treEm;
    var ngayDat = ViewBag.ngaydat;
    var lienHe = ViewBag.lienHe;
}


<body>
    <header>
        <h2 class="XnThanhCong"><i>Nhập thông tin thanh toán thành công</i></h2>

        <a href="/Home"><button class="btnTroLai">Quay trở lại</button></a>

    </header>
    <div class="thongBao1">
        <h2>VÉ ĐIỆN TỬ VÀ XÁC NHẬN HÀNH TRÌNH</h2><br>
        <a>
            Đừng quên kiểm tra tình trạng đặc chổ và chuyến bay của bạn với chức năng
            <a href="#">tình trạng chuyến bay</a> và <a href="#">Quản lý đặt chổ</a>
            trên <a href="#">http://hangkhongVietNam.com</a><br>
            <a>Chế độ này cho phép bạn kiểm tra các thông tin mới nhất về đặt chổ và chuyến bay của bạn</a>
        </a><br>
        <form method="get" action="/">
            <h3>Mã đặt chỗ (số vé):@ViewBag.madatcho</h3>
            <h2>1. Thông tin đặt chỗ</h2>
            <div class="hopOutput">
                @for (int c = 0; c < nguoiLon.Count; c++)
                {
                    var hoten = nguoiLon[c].ContainsKey("hoten") ? nguoiLon[c]["hoten"]?.ToString() : "N/A";
                    <div class="raTen">
                        <label for="lbTenChu">Tên hành khách thứ @(c + 1) : @hoten</label>
                    </div>
                }

                @for (int c = 0; c < treEm.Count; c++)
                {
                    var hotenTreEm = treEm[c].ContainsKey("hotenTreEm") ? treEm[c]["hotenTreEm"]?.ToString() : "N/A";
                    <div class="raTen">
                        <label for="lbTenChu">Tên Trẻ Em thứ @(c + 1) : @hotenTreEm</label>
                    </div>
                }

                <div class="raTrangThai">
                    <label for="lbSoThe">Trang thái đặt chỗ: đã xử lý</label>
                </div>

                <div class="raNgay">
                    <label for="lbNgayDat">Ngày đặt: @ngayDat</label>
                </div>


                <h2>2.Thông Tin Liên Hệ Của Người Điền Mail</h2>
                @foreach (var item in @ViewBag.lienHe)
        {
            <li>@item.Key: @item.Value</li>
        }

                <div class="nhapTien">
                    <h3>
                        Lưu ý:
                        Chúng tôi đã gửi thông tin Phiếu đặt chỗ qua Email cá nhân. Vui lòng check Email.
                    </h3>
                </div>
                @Html.ActionLink(
            linkText: "Check in",
            actionName: "Index",
            controllerName: "Checkin",
            routeValues: null,
            htmlAttributes: new { @class = "btnThanhToan" }
        )
</form>
    </div>
</body>
</html>



