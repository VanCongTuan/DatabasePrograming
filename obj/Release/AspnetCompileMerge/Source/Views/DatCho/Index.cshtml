
@{
    ViewBag.Title = "Index";
}

<!DOCTYPE html>
<html>

<head>
    <title>Sơ đồ ghế máy bay</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="~/Content/static/js/DatCho.js"></script>
    <link rel="stylesheet" href="~/Content/static/css/DatCho.css">
    <menu charset="utf-8">
</head>

<body onload="ChuyenMauGhe_ThuongGia(), ChuyenMauGhe()">
    <div class="p-5 bg-white">
        <form method="post" action="/ThongTinHanhKhach">
            <div class="row">
                <div class="col-sm-6">
                    <div id="text-title" class="text-center" style="background-color: white;"><strong>Sơ đồ ghế trên máy bay</strong></div>
                    <div class=" d-flex">
                        @foreach (var day in ViewBag.dayghe)
                        {

                            <div class="common p-2 flex-fill">@day</div>}

                    </div>
                   

                       
                            @for (int i = 1; i < ViewBag.soluongghe + 1; i++)
                            {
                                <div class="d-flex ">
                                    @foreach (var day in ViewBag.dayghe)
                                    {
                                        foreach (var g in ViewBag.ghe)
                                        {
                                            if (g.GheId + ViewBag.soluongday - 1 <= ViewBag.soluongday)
                                            {

                                                <button type="button" id="@($"{g.DayGhe}{g.GheId + i - 1}")" class="btn btn-light common ghe p-2 flex-fill" onclick="change(this, @ViewBag.soluong, @ViewBag.hangve)">@($"{day}{g.GheId + i -1 }") </button>
                                            }
                                        }

                    }
                </div>
                            }
                        
                    
                </div>
                <div class="col-sm-6">
                    <div id="text-title" class="text-center"><strong>Ghi chú</strong></div>
                    <div class="row">
                        <div class="col-sm-4 color" style="background-color: red;"></div>
                        <div class="col-sm-8 text">Hết chỗ</div>
                    </div>
                    <div class="row">
                        <div class="col-sm-4 color" style="background-color: white;"></div>
                        <div class="col-sm-8 text">Còn trống</div>
                    </div>
                    <div class="row">
                        <div class="col-sm-4 color" style="background-color: yellow;"></div>
                        <div class="col-sm-8 text">Đang chọn</div>
                    </div>
                    <div class="row">
                        <div class="col-sm-4 color" style="background-color: #6c5ce7;"></div>
                        <div class="col-sm-8 text">Ghế hạng thương gia</div>
                    </div>

                   
                    <div class=" justify-content-end">

                       
                   <td>Số ghế đặt là :  <input id="buttonValues" name="buttonValues" type="text"  readonly style="border:none; background-color:transparent" />  </td>
                       
                       
                        <button type="submit" class="btn-primary active ml-2 p-2 m-1" id="conf">
                            @Html.ActionLink(
          linkText: "Tiếp tục",
          actionName: "Index",
          controllerName: "ThongTinHanhKhach",
          routeValues: null,
          htmlAttributes: new { @class = "btn-primary active ml-2 p-2 m-1" }
      )
                        </button>
                        <button type="button" id="thanhToanBtn" class="btn-primary p-2 m-1" onclick="checkAndPay(this,@ViewBag.soluong)">Xác nhận ghế<a href="#"></a></button>
                    </div>
                    <

                </div>
            </div>
        </form>
    </div>
</body>

</html>
<script>
    var buttonValues = [];
    function change(button, soluong, hangve) {
        changeColor(button, soluong, hangve);
        storeValue(button);
    }
    function storeValue(button) {
        var buttonValue = button.innerHTML;
        buttonValues.push(buttonValue);
        addToInput(buttonValue);
    }
   
    function addToInput(value) {
        // Lấy giá trị hiện tại của input
        var input = document.getElementById("buttonValues");
        var currentValue = input.value;

        // Kiểm tra nếu input đã có giá trị thì thêm dấu phẩy trước giá trị mới
        if (currentValue.length > 0) {
            currentValue += ",";
        }

        // Thêm giá trị mới vào input
        currentValue += value;
        input.value = currentValue;
    }
</script>

